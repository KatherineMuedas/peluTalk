- unless @reviews.empty?
  - @reviews.each do |review|
    %h4
      = link_to review.user.name, user_path(review.user)
      \: #{review.title}
      - review.pelu_rating.times do
        %i.fa.fa-star
    %p
      = image_tag review.picture.photo.url(:thumb), class: "right" if review.picture.present?
      = review.body
      - if current_user && review.user_id == current_user.id
        = link_to peluqueria_review_path(@peluqueria.id , review.id), method: :delete, data: {confirm: 'Are you sure you want to delete this review?'} do
          %i.fa.fa-trash-o
    %hr
- else
  %h5 No Reviews to Display